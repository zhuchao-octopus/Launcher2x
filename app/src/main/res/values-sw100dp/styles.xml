<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Search Bar -->
    <style name="QSBBar">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">@dimen/qsb_bar_height</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">start</item>
    </style>

    <style name="SearchDropTargetBar">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="SearchButton">
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:paddingTop">@dimen/toolbar_button_vertical_padding</item>
        <item name="android:paddingBottom">@dimen/toolbar_button_vertical_padding</item>
        <item name="android:paddingStart">@dimen/toolbar_button_horizontal_padding</item>
        <item name="android:paddingEnd">@dimen/toolbar_button_horizontal_padding</item>
    </style>

    <style name="DropTargetButtonContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
    </style>

    <style name="DropTargetButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">@dimen/toolbar_button_vertical_padding</item>
        <item name="android:paddingBottom">@dimen/toolbar_button_vertical_padding</item>
        <item name="android:paddingStart">@dimen/toolbar_button_horizontal_padding</item>
        <item name="android:paddingEnd">@dimen/toolbar_button_horizontal_padding</item>
        <item name="android:shadowColor">#DD000000</item>
        <item name="android:shadowDx">0.0</item>
        <item name="android:shadowDy">1.0</item>
        <item name="android:shadowRadius">4.0</item>
    </style>

    <!-- AppsCustomize -->
    <style name="TabIndicator.AppsCustomize">
        <item name="android:maxWidth">200dp</item>
    </style>

    <style name="CellTextStyle" parent="CommonStyleFonts">
        <item name="android:textSize">22.0px</item>
        <item name="android:textColor">#FFFFFFFF</item>
        <item name="android:gravity">center</item>
        <!-- <item name="android:textStyle">bold</item> -->

    </style>

    <style name="CeFixButtonStyle">
        <item name="android:textSize">20.0px</item>
        <item name="android:textColor">#FFFFFFFF</item>
        <item name="android:gravity">center</item>
        <item name="android:onClick">onLauncherButtonClick</item>
        <item name="android:layout_width">200.0px</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:tag">ak_paramter=100,50</item>
        <item name="android:background">@null</item>
        <item name="android:singleLine">true</item>
        <item name="android:scaleX">0.8</item>
        <item name="android:scaleY">0.8</item>
    </style>

    <style name="BottomButton" parent="CommonStyleFonts">
        <item name="android:tag">ak_paramter=100,50</item>
        <item name="android:shadowColor">#555555</item>
        <item name="android:scaleType">center</item>
        <item name="android:textSize">22px</item>
        <item name="android:layout_width">0px</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        
    </style>

</resources>