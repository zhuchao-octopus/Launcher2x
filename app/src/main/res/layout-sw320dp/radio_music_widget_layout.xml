<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:launcher="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:paddingTop="0px">

        <AbsoluteLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="20dp"
            android:background="#00000000"
            android:orientation="horizontal"
            tools:ignore="Deprecated,UselessParent">

            <AbsoluteLayout
                android:id="@+id/entry_music"
                android:layout_width="350dp"
                android:layout_height="90dp"

                android:layout_x="145dp"
                android:layout_y="0dp"

                android:background="@drawable/music_tab"
                android:onClick="onLauncherButtonClick"
                android:orientation="horizontal"
                android:visibility="invisible">

                <ImageView
                    android:id="@+id/album_art"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_x="290dp"
                    android:layout_y="25dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/music_pic" />

                <View
                    android:id="@+id/music_icon"
                    android:layout_width="22dp"
                    android:layout_height="36dp"
                    android:layout_x="92dp"
                    android:layout_y="22dp"
                    android:visibility="gone" />

                <com.common.view.MarqueeTextView
                    android:id="@+id/music_name"
                    android:layout_width="240dp"
                    android:layout_height="27dp"
                    android:layout_x="30dp"
                    android:layout_y="7dp"
                    android:gravity="center"
                    android:singleLine="true"
                    android:textAppearance="@style/CommonStyleFonts"
                    android:textColor="#ffffff"
                    android:textSize="18sp"
                    android:visibility="visible" />

                <SeekBar
                    android:id="@+id/music_progress"
                    style="@android:style/Widget.Material.Light.SeekBar"
                    android:layout_width="255dp"
                    android:layout_height="wrap_content"
                    android:layout_x="30dp"
                    android:layout_y="46dp"
                    android:max="100"
                    android:thumb="@drawable/dot_img"
                    android:thumbOffset="1dp" />

                <TextView
                    android:id="@+id/music_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_x="40dp"
                    android:layout_y="30dp"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="00"
                    android:textAppearance="@style/CommonStyleFonts"
                    android:textColor="#ffffff"
                    android:textSize="14sp"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/music_time2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_x="250dp"
                    android:layout_y="30dp"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="00"
                    android:textAppearance="@style/CommonStyleFonts"
                    android:textColor="#ffffff"
                    android:textSize="14sp"
                    android:visibility="visible" />

                <LinearLayout
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_x="60dp"
                    android:layout_y="55dp"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/music_button_prev"
                        style="@style/RadioMusicButtonStyle"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="50dp"
                        android:onClick="onLauncherButtonClick"
                        android:padding="8dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_prev" />

                    <ImageButton
                        android:id="@+id/music_button_play"
                        style="@style/RadioMusicButtonStyle"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="50dp"
                        android:padding="8dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/play_level" />

                    <ImageButton
                        android:id="@+id/music_button_next"
                        style="@style/RadioMusicButtonStyle"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_gravity="center_vertical"
                        android:padding="8dp"
                        android:src="@drawable/ic_next"
                        android:text="@string/toolbar_text_gps" />
                </LinearLayout>
            </AbsoluteLayout>


            <AbsoluteLayout
                android:id="@+id/entry_radio"

                android:layout_width="350dp"
                android:layout_height="90dp"

                android:layout_x="145dp"
                android:layout_y="0dp"

                android:background="@drawable/radio_tab"
                android:onClick="onLauncherButtonClick"
                android:orientation="horizontal"
                android:visibility="visible">

                <TextView
                    android:id="@+id/radio_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_y="7dp"
                    android:gravity="bottom|center|center_horizontal"
                    android:text="@string/fm_radio_title"
                    android:textAppearance="@style/CommonStyleFonts"
                    android:textColor="#FFFFFFFF"
                    android:textSize="20sp"
                    android:textStyle="normal"
                    android:visibility="gone" />

                <ImageView
                    android:layout_width="88dp"
                    android:layout_height="108dp"
                    android:layout_x="14dp"
                    android:layout_y="17dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/radio_pic"
                    android:visibility="gone" />

                <LinearLayout
                    android:id="@+id/radio_info_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_x="40dp"
                    android:layout_y="10dp"
                    android:gravity="bottom|center_horizontal"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/radio_button_prev"
                        style="@style/RadioMusicButtonStyle"
                        android:layout_width="34dp"
                        android:layout_height="wrap_content"
                        android:scaleType="fitCenter"
                        android:src="@drawable/last_icon" />

                    <TextView
                        android:id="@+id/radio_music_baud"
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:gravity="center|center_vertical"
                        android:textAppearance="@style/CommonStyleFonts"
                        android:textColor="#FFFFFFFF"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/radio_music_freq"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:gravity="center|center_vertical"
                        android:textAppearance="@style/WorkspaceButton"
                        android:textColor="@color/workspace_icon_text_color"
                        android:textSize="40sp" />

                    <TextView
                        android:id="@+id/radio_music_hz"
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:gravity="center|center_vertical"
                        android:textAppearance="@style/CommonStyleFonts"
                        android:textColor="#FFFFFFFF"
                        android:textSize="16sp" />

                    <ImageButton
                        android:id="@+id/radio_button_next"
                        style="@style/RadioMusicButtonStyle"
                        android:layout_width="34dp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/next_icon" />

                </LinearLayout>

                <com.my.radio.MarkFaceView
                    android:id="@+id/radio_mark_face_view"
                    android:layout_width="146dp"
                    android:layout_height="28dp"
                    android:layout_x="100dp"
                    android:layout_y="46dp"
                    android:background="@drawable/radio_freq"
                    android:visibility="invisible" />

                <LinearLayout
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_x="125dp"
                    android:layout_y="53dp"
                    android:gravity="bottom|center"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/radio_button_play"
                        style="@style/RadioMusicButtonStyle"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/off" />

                </LinearLayout>
            </AbsoluteLayout>

            <LinearLayout
                android:id="@+id/entry_time"
                android:layout_width="120dp"
                android:layout_height="70dp"
                android:layout_marginBottom="7dp"
                android:layout_x="0dp"
                android:layout_y="180dp"
                android:background="@drawable/time_tab"
                android:gravity="bottom|left"
                android:onClick="onLauncherButtonClick"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/radio_music_time"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginBottom="2dp"
                    android:gravity="clip_horizontal|start"
                    android:paddingStart="2dp"
                    android:textAppearance="@style/CommonStyleFonts"
                    android:textColor="#FFFFFFFF"
                    android:textSize="40sp" />


                <LinearLayout
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_marginBottom="5dp"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal"
                    android:visibility="visible">

                    <TextView
                        android:id="@+id/radio_music_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="start"
                        android:textAppearance="@style/CommonStyleFonts"
                        android:textColor="#FFFFFFFF"
                        android:textSize="12sp"
                        android:visibility="visible" />

                    <TextView
                        android:id="@+id/radio_music_date2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:gravity="center_horizontal"
                        android:paddingLeft="2dp"
                        android:paddingRight="4dp"
                        android:textAppearance="@style/CommonStyleFonts"
                        android:textColor="#FFFFFFFF"
                        android:textSize="12sp"
                        android:visibility="visible" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_x="220dp"
                android:layout_y="220dp"
                android:background="@drawable/tab"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/img_btn_sound"
                    style="@style/RadioMusicButtonStyle"
                    android:layout_width="45dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="8dp"
                    android:padding="2dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/sound_icon" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:padding="5dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/vertical_line" />

                <ImageButton
                    android:id="@+id/img_btn_eq"
                    style="@style/RadioMusicButtonStyle"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_vertical"
                    android:padding="5dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/eqeq" />
            </LinearLayout>

            <ImageButton
                android:id="@+id/img_btn_allapps"
                style="@style/RadioMusicButtonStyle"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_x="340dp"
                android:layout_y="205dp"
                android:src="@drawable/menu_icon" />


            <LinearLayout
                android:id="@+id/ll_btn_setting"
                style="@style/RadioMusicButtonStyle"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_x="410dp"
                android:layout_y="220dp"
                android:background="@drawable/tab"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:src="@drawable/transverse_line" />

                <ImageButton
                    android:id="@+id/img_btn_setting"
                    style="@style/RadioMusicButtonStyle"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/setting_icon" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:src="@drawable/transverse_line" />
            </LinearLayout>
        </AbsoluteLayout>
    </LinearLayout>

</merge>